<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deliverer.DelivererRegistrationActivity">

    <TextView
        android:id="@+id/title_deliverer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliverer Registration form"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/teal_200"/>

    <EditText
        android:id="@+id/deliverer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_deliverer"
        android:hint="Name..."
        android:inputType="text"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deliverer_name"
        android:hint="Phone..."
        android:inputType="number"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deliverer_phone"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deliverer_email"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deliverer_password"
        android:hint="Area Address..."
        android:inputType="text"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_bike_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deliverer_address"
        android:hint="Motorbike name and numberplate"
        android:inputType="text"
        android:textSize="16dp" />

    <Button
        android:id="@+id/deliverer_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/deliverer_bike_name"
        android:backgroundTint="@color/teal_200"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="18dp"/>



</RelativeLayout>