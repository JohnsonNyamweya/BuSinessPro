<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admins.AdminHomeActivity">

    <TextView
        android:id="@+id/admin_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Dear Admin"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/admin_check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_welcome"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_500"
        android:text="Check New Orders"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/admin_check_and_approve_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/purple_500"
        android:text="Check and Approve New Products"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_register_seller_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_check_and_approve_orders_btn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_500"
        android:text="Register Seller"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_register_deliverer_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_register_seller_btn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_500"
        android:text="Register Deliverer"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_view_sellers_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_register_deliverer_btn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_500"
        android:text="View Sellers"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_view_deliverers_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_view_sellers_available"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_500"
        android:text="View Deliverers"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_500"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"/>

</RelativeLayout>