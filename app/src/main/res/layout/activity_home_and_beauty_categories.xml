<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.HomeAndBeautyCategoriesActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_add_new_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW HOME AND BEAUTY PRODUCT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/yellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_and_kitchen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Home and Kitchen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

        <TextView
            android:id="@+id/small_appliances"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Small Appliances"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cooking_appliances"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Cooking Appliances"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

        <TextView
            android:id="@+id/office_products"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Office Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

    </LinearLayout>


</LinearLayout>