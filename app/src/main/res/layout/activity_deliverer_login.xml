<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deliverer.DelivererLoginActivity">

    <TextView
        android:id="@+id/title_deliverer_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliverer Login form"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/teal_200"/>

    <EditText
        android:id="@+id/deliverer_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title_deliverer_login"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/deliverer_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/deliverer_login_email"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textSize="16dp" />

    <Button
        android:id="@+id/deliverer_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/deliverer_login_password"
        android:backgroundTint="@color/teal_200"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/deliverer_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliverer_login_btn"
        android:text="Forgot password"
        android:gravity="end"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textColor="@color/teal_200"/>

</RelativeLayout>