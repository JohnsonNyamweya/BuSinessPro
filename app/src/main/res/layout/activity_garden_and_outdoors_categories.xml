<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.GardenAndOutdoorsCategoriesActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_add_new_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW GARDEN AND OUTDOORS PRODUCT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/yellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gardening_and_lawn_care"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Gardening and Lawn Care"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

        <TextView
            android:id="@+id/grills_and_outdoor_cooking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Grills and Outdoor Cooking"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outdoor_decor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Outdoor Decor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"/>


    </LinearLayout>


</LinearLayout>